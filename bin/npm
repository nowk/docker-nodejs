#!/bin/bash
# vim: set filetype=sh :
set -e

VERSION=5.12.0
DOCKER_IMAGE="node:$VERSION"

# include _docker.sh
. "$(dirname $0)/../lib/docker.sh/_docker.sh"

args=("${@}" -- -v ~/.ssh:/root.ssh --entrypoint /usr/local/bin/npm)
node ${args[@]} # use the existing node executable and overwrite with additional arguments

